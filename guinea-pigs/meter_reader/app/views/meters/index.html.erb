<h1>Listing meters</h1>

<table>
  <tr>
    <th>Read on</th>
  </tr>

<% @meters.each do |meter| %>
  <tr>
    <td><%=h meter.read_on %></td>
    <td><%= link_to 'Show', meter %></td>
    <td><%= link_to 'Edit', edit_meter_path(meter) %></td>
    <td><%= link_to 'Destroy', meter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New meter', new_meter_path %>